{
  "name": "smolikja-team-portfolio",
  "version": "1.0.0",
  "description": "Modern portfolio website with smooth scroll navigation and snap scrolling",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "deploy": "./deploy.sh",
    "deploy:github": "./deploy.sh github",
    "deploy:netlify": "./deploy.sh netlify",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "lint:js": "eslint src --ext .js",
    "format": "prettier --write \"src/**/*.{js,css,html,scss}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smolikja/portfolio-web.git"
  },
  "keywords": [
    "portfolio",
    "website",
    "scroll-snap",
    "responsive",
    "modern",
    "javascript",
    "css3",
    "html5"
  ],
  "author": "smolikja team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smolikja/portfolio-web/issues"
  },
  "homepage": "https://smolikja.team",
  "devDependencies": {
    "@vitest/ui": "^1.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "stylelint": "^16.1.0",
    "stylelint-config-standard-scss": "^12.0.0",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
